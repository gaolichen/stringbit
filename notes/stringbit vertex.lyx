\begin_layout Standard
The stringbit model of 
\begin_inset Formula $s=1$
\end_inset

 case, studied in
\begin_inset CommandInset citation
LatexCommand cite
key "Sun:2014dga"

\end_inset

 and 
\begin_inset CommandInset citation
LatexCommand cite
key "Chen:2016hkz"

\end_inset

, has the Hamiltonian of the form
\begin_inset Formula 
\begin{equation}
H^{s=1}=\frac{2}{N}\tr\left[\left(\bar{a}^{2}-i\bar{b}^{2}\right)a^{2}-\left(\bar{b}^{2}-i\bar{a}^{2}\right)b^{2}+\left(\bar{a}\bar{b}+\bar{b}\bar{a}\right)ba+\left(\bar{a}\bar{b}-\bar{b}\bar{a}\right)ab\right].\label{eq:ham_Hs_1}
\end{equation}

\end_inset

 The generalization of this Hamitlonian to to arbitrary 
\begin_inset Formula $s$
\end_inset

 cases was presented in 
\begin_inset CommandInset citation
LatexCommand cite
key "Thorn:2014hia,Thorn:2015wli"

\end_inset

.
 In analogy with 
\begin_inset Formula $a$
\end_inset

 and 
\begin_inset Formula $b$
\end_inset

, the generalized creation operators read 
\begin_inset Formula 
\begin{equation}
\left(\bar{\phi}_{a_{1}\cdots a_{n}}\right)_{\alpha}^{\beta},\quad a_{i}=1,\cdots,s,\quad n=0,\cdots,s,\quad\alpha,\beta=1,\cdots,N\label{eq:ham_creation_op}
\end{equation}

\end_inset

 where 
\begin_inset Formula $\alpha,\,\beta$
\end_inset

 are color indices and 
\begin_inset Formula $a_{i}$
\end_inset

 completely antisymmetric spin indices.
 
\begin_inset Formula $\bar{\phi}$
\end_inset

 is bosonic if 
\begin_inset Formula $n$
\end_inset

 is even and fermion if 
\begin_inset Formula $n$
\end_inset

 is odd.
 We then introduces 
\begin_inset Formula $s$
\end_inset

 Grassmann coordinates 
\begin_inset Formula $\theta^{a}$
\end_inset

, 
\begin_inset Formula $a=1,\cdots,s$
\end_inset

 and a super bit creation operator 
\begin_inset Formula 
\[
\psi\left(\theta\right)=\sum_{k=0}^{s}\frac{1}{k!}\bar{\phi}_{c_{1}\cdots c_{k}}\theta^{c_{1}}\cdots\theta^{c_{k}}.
\]

\end_inset

We can now build single trace operator 
\begin_inset Formula 
\[
T\left(\theta_{1},\cdots,\theta_{k}\right)=\tr\psi\left(\theta_{1}\right)\psi\left(\theta_{2}\right)\cdots\psi\left(\theta_{k}\right),
\]

\end_inset

 where 
\begin_inset Formula $\theta_{i}$
\end_inset

 are 
\begin_inset Formula $s$
\end_inset

-component Grassmann variables.
 The the color singlet subspace of Fock space consists of states as 
\begin_inset Formula 
\[
T\left(\theta_{1},\cdots,\theta_{K}\right)T\left(\eta_{1},\cdots,\eta_{K}\right)\cdots\ket{0},
\]

\end_inset

 where 
\begin_inset Formula $\ket{0}$
\end_inset

 is the vacuum state annihilated by any annihilation operators.
 The generalized Hamiltonian in 
\begin_inset CommandInset citation
LatexCommand cite
key "Thorn:2014hia,Thorn:2015wli"

\end_inset

 reads 
\begin_inset Formula 
\begin{equation}
H=\sum_{i=1}^{5}H_{i},\label{eq:ham_H_2}
\end{equation}

\end_inset

where each 
\begin_inset Formula $H_{i}$
\end_inset

 is given in Appendix 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:App-H-commutation"

\end_inset

.
\end_layout

\begin_layout Standard
As 
\begin_inset CommandInset citation
LatexCommand cite
key "Chen:2016hkz"

\end_inset

 shows, the 
\begin_inset Formula $N=\infty$
\end_inset

 behavior is not affected by adding to 
\begin_inset Formula $H^{s=1}$
\end_inset

 the terms of the form
\begin_inset Formula 
\begin{eqnarray*}
\Delta H^{s=1} & = & \frac{2}{N}\tr\left[\bar{a}\bar{b}ba+\bar{b}\bar{a}ab+\bar{a}^{2}a^{2}+\bar{b}^{2}b^{2}-\tilde{M}^{s=1}\right],\\
\tilde{M}^{s=1} & = & \tr\left(\bar{a}a+\bar{b}b\right)-\frac{1}{N}\left(\tr\bar{a}\tr a+\tr\bar{b}\tr b\right).
\end{eqnarray*}

\end_inset

We can generalize 
\begin_inset Formula $\Delta H^{s=1}$
\end_inset

 to arbitrary 
\begin_inset Formula $s$
\end_inset

 cases, which reads 
\begin_inset Formula 
\begin{eqnarray*}
\Delta H & = & \frac{2}{N}\left(\sum_{n=0}^{s}\sum_{k=0}^{s}\frac{1}{n!k!}\tr\bar{\phi}_{b_{1}\cdots b_{k}}\bar{\phi}_{a_{1}\cdots a_{n}}\phi_{a_{1}\cdots a_{n}}\phi_{b_{1}\cdots b_{k}}-\tilde{M}\right),\\
\tilde{M} & = & \sum_{n=0}^{s}\frac{1}{n!}\tr\bar{\phi}_{a_{1}\cdots a_{n}}\phi_{a_{1}\cdots a_{n}}-\frac{1}{N}\sum_{n=0}^{s}\frac{1}{n!}\tr\bar{\phi}_{a_{1}\cdots a_{n}}\tr\phi_{a_{1}\cdots a_{n}}.
\end{eqnarray*}

\end_inset

Now we have the complete form of Hamiltonian to be studied in this paper
 
\begin_inset Formula 
\begin{equation}
H=\sum_{i=1}^{5}H_{i}+s\xi\Delta H,\label{eq:ham_H_3}
\end{equation}

\end_inset

 where 
\begin_inset Formula $\xi$
\end_inset

 is a real constant.
 
\end_layout

\begin_layout Standard
By defining 
\begin_inset Formula 
\begin{align}
\bar{h}_{kl} & =2\left(s-2\theta_{k}^{a}\frac{d}{d\theta_{k}^{a}}\right)+2\theta_{k}^{a}\frac{d}{d\theta_{k}^{a}}+2\theta_{l}^{a}\frac{d}{d\theta_{k}^{a}}-2i\theta_{k}^{a}\theta_{l}^{a}-2i\frac{d}{d\theta_{k}^{a}}\frac{d}{d\theta_{l}^{a}}+2s\xi-2s\delta_{k,l}\label{eq:ham_h_klbar}\\
\bar{h} & =\sum_{k=1}^{M}\left(\bar{h}_{k,k+1}-2s\xi\right),
\end{align}

\end_inset

 we can summarize the action of 
\begin_inset Formula $H$
\end_inset

 on trace states as
\begin_inset Formula 
\begin{equation}
HT\left(\theta_{1},\cdots,\theta_{M}\right)\ket{0}=\bar{h}T\left(\theta_{1}\cdots\theta_{M}\right)\ket{0}+\frac{1}{N}\sum_{k=1}^{M}\sum_{l\neq k+1}\bar{h}_{kl}T\left(\theta_{l}\cdots\theta_{k}\right)T\left(\theta_{k+1}\cdots\theta_{l-1}\right)\ket{0}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{align}
HT\left(\theta_{1}\cdots\theta_{K}\right)T\left(\eta_{1}\cdots\eta_{L}\right)\ket{0} & =\left(\bar{h}_{\theta}+\bar{h}_{\eta}\right)T\left(\theta_{1}\cdots\theta_{K}\right)T\left(\eta_{1}\cdots\eta_{L}\right)+\frac{1}{N}\text{Fission Terms}\nonumber \\
 & +\frac{1}{N}\sum_{k=1}^{K}\sum_{l=1}^{L}\bar{h}_{kl}T\left(\theta_{k+1}\cdots\theta_{k}\eta_{l}\cdots\eta_{l-1}\right)\ket{0}\nonumber \\
 & +\frac{1}{N}\sum_{k=1}^{K}\sum_{l=1}^{L}\bar{h}_{lk}T\left(\theta_{k}\cdots\theta_{k-1}\eta_{l+1}\cdots\eta_{l}\right)\ket{0}.\label{eq:ham_Haction_double_trace}
\end{align}

\end_inset

Note that in Eqs.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_Haction_double_trace"

\end_inset

, the 
\begin_inset Formula $-2s\delta_{kl}$
\end_inset

 term of 
\begin_inset Formula $h_{kl}$
\end_inset

 should be zero even if 
\begin_inset Formula $k=l$
\end_inset

, as they labeling different variables.
\end_layout

\begin_layout Standard
To study the perturbation of the system, it is helpful to introduce the
 single trace energy eigenstate of the system at 
\begin_inset Formula $N=\infty$
\end_inset

, where only the leading term, 
\begin_inset Formula $\bar{h}$
\end_inset

, survive.
 This single trace energy eigenstate can be expressed as 
\begin_inset Formula 
\begin{equation}
T_{r}\ket{0}=\int d^{s}\theta_{1}\cdots d^{s}\theta_{M}\, T\left(\theta_{1},\cdots,\theta_{M}\right)\psi_{r}\left(\theta_{1},\dots,\theta_{M}\right)\ket{0},\label{eq:ham_trace_energystate}
\end{equation}

\end_inset

 where 
\begin_inset Formula $\psi_{r}$
\end_inset

 is the wave function.
 Since 
\begin_inset Formula $T\left(\theta_{1},\cdots,\theta_{M}\right)$
\end_inset

 is invariant under cyclic permutation of 
\begin_inset Formula $\theta_{i}$
\end_inset

, we can constrain 
\begin_inset Formula $\psi_{r}$
\end_inset

 by 
\begin_inset Formula 
\begin{equation}
\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)=\left(-\right)^{s\left(M-1\right)}\psi_{r}\left(\theta_{2},\cdots,\theta_{M},\theta_{1}\right)\label{eq:ham_cyclicconstrtaint}
\end{equation}

\end_inset

 without loss of generality.
 The sign factor follows from that the measure of 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_trace_energystate"

\end_inset

 is multiplied by 
\begin_inset Formula $\left(-\right)^{s\left(M-1\right)}$
\end_inset

 under the cyclic transformation 
\begin_inset Formula $\theta_{i}\to\theta_{i+1}$
\end_inset

.
 Now the action of 
\begin_inset Formula $\bar{h}_{kl}$
\end_inset

 on 
\begin_inset Formula $T_{r}\ket{0}$
\end_inset

 is
\begin_inset Formula 
\begin{equation}
\bar{h}_{kl}T_{r}\ket{0}=\int d\theta\,\bar{h}_{kl}T\left(\theta\right)\psi_{r}\left(\theta\right)\ket{0}=\int d\theta\, T\left(\theta\right)h_{kl}\psi_{r}\left(\theta\right)\ket{0}\label{eq:ham_intbyparts}
\end{equation}

\end_inset

 where we have performed a integration by parts in the last step and 
\begin_inset Formula $h_{kl}$
\end_inset


\begin_inset Formula 
\begin{equation}
h_{kl}=-2\left(s-2\theta_{k}^{a}\frac{d}{d\theta_{k}^{a}}\right)-2\theta_{k}^{a}\frac{d}{d\theta_{l}^{a}}-2\theta_{k}^{a}\frac{d}{d\theta_{l}^{a}}-2i\theta_{k}^{a}\theta_{l}^{a}-2i\frac{d}{d\theta_{k}^{a}}\frac{d}{d\theta_{l}^{a}}+2s\xi+2s\delta_{k,l},\label{eq:ham_h_kl}
\end{equation}

\end_inset

Likewise, the action of 
\begin_inset Formula $\bar{h}$
\end_inset

 on 
\begin_inset Formula $T\left(\theta\right)$
\end_inset

 is equivalent to the action of 
\begin_inset Formula $\psi_{r}\left(\theta\right)$
\end_inset

 by 
\begin_inset Formula 
\begin{equation}
h=\sum_{k=1}^{M}\left(h_{k,k+1}-2s\xi\right).\label{eq:ham_h}
\end{equation}

\end_inset

Note that the 
\begin_inset Formula $k=l$
\end_inset

 case needs special treatment in the last step of 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_intbyparts"

\end_inset

.
 
\end_layout

\begin_layout Subsection
Diagonalizing Hamiltonian at 
\begin_inset Formula $N=\infty$
\end_inset


\end_layout

\begin_layout Standard
The energy eigenstate of trace states are equivalent to the eigenfunction
 of the equation 
\begin_inset Formula 
\begin{equation}
h\psi_{r}\left(\theta_{1},\dots,\theta_{M}\right)=E_{r}\psi_{r}\left(\theta_{1},\dots,\theta_{M}\right).\label{eq:ham_eigenequation}
\end{equation}

\end_inset

The eigenvalue problem 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ham_eigenequation"

\end_inset

 can be solved exactly
\begin_inset CommandInset citation
LatexCommand cite
key "Thorn:2015wli"

\end_inset

.
 Since each term of 
\begin_inset Formula $h$
\end_inset

 contains only variables or derivatives of the same spin component, it is
 suffice to solve the equation with only one component.
 We therefore suppress the spinor index 
\begin_inset Formula $a$
\end_inset

 in the following calculation.
\end_layout

\begin_layout Standard
We introduce Fourier transformations
\begin_inset Formula 
\begin{eqnarray}
\alpha_{n} & = & \frac{1}{\sqrt{M}}\sum_{k=1}^{M}\theta_{k}e^{-2\pi ikn/M},\quad\beta_{n}=\frac{1}{\sqrt{M}}\sum_{k=1}^{M}\frac{d}{d\theta_{k}}e^{-2\pi ikn/M},\label{eq:ham_alpha_beta}\\
\theta_{k} & = & \frac{1}{\sqrt{M}}\sum_{n=0}^{M-1}\alpha_{n}e^{2\pi ikn/M},\quad\frac{d}{d\theta_{k}}=\frac{1}{\sqrt{M}}\sum_{n=0}^{M-1}\beta_{n}e^{2\pi ikn/M},\label{eq:ham_theta_dtheta}\\
n & = & 0,\dots M-1,\quad k=1,\dots M.\nonumber 
\end{eqnarray}

\end_inset

which satisfy
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left\{ \alpha_{n},\beta_{m}\right\} =\delta_{m+n,M}+\delta_{m,0}\delta_{n,0}.\label{eq:ham_alpha_beta_anticom}
\end{equation}

\end_inset

 The Hermitianlity of Hamiltonian implies that 
\begin_inset Formula $\theta_{k}^{\dagger}=\frac{d}{d\theta_{k}},\,\frac{d}{d\theta_{k}}^{\dagger}=\theta_{k},$
\end_inset

 from which it follows that 
\begin_inset Formula 
\[
\alpha_{n}^{\dagger}=\beta_{M-n},\quad\beta_{n}^{\dagger}=\alpha_{M-n},\quad\left\{ \alpha_{n},\alpha_{m}^{\dagger}\right\} =\left\{ \beta_{n},\beta_{m}^{\dagger}\right\} =\delta_{m,n},\quad0\leq n,m\leq M-1.
\]

\end_inset

 We can express 
\begin_inset Formula $h$
\end_inset

 in terms of 
\begin_inset Formula $\alpha_{n}$
\end_inset

 and 
\begin_inset Formula $\beta_{n}$
\end_inset

 
\begin_inset Formula 
\begin{multline}
h=2\sum_{n=1}^{M-1}\Big[\left(\alpha_{n}\alpha_{M-n}+\beta_{n}\beta_{M-n}\right)\sin\frac{2n\pi}{M}+\\
+2\left(1-\cos\frac{2n\pi}{M}\right)\left(\alpha_{n}\beta_{M-n}+\alpha_{M-n}\beta_{n}\right)\Big]-2M.\label{eq:eigen_h}
\end{multline}

\end_inset

We now seek for eigenoperators of 
\begin_inset Formula $h$
\end_inset

 
\begin_inset Formula 
\begin{equation}
F_{k}=r_{k}\alpha_{k}+\beta_{k},\quad\left[h,F_{k}\right]=\epsilon_{k}F_{k},\label{eq:ham_operator_eq}
\end{equation}

\end_inset

 where 
\begin_inset Formula $r_{k}$
\end_inset

 and 
\begin_inset Formula $\epsilon_{k}$
\end_inset

 are constants.
 Substituting 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:eigen_h"

\end_inset

 into 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_operator_eq"

\end_inset

 yields
\begin_inset Formula 
\[
\epsilon_{k}^{\pm}=\pm8\sin\frac{k\pi}{M},\quad r_{k}^{\pm}=\tan\frac{k\pi}{M}\pm\sec\frac{k\pi}{M}.
\]

\end_inset

 For convenience, we normalize the coefficients of 
\begin_inset Formula $F_{k}$
\end_inset

 and obtain the lowering and raising operators
\begin_inset Formula 
\begin{equation}
F_{k}=s_{k}\alpha_{k}+c_{k}\beta_{k},\quad\bar{F}_{k}=c_{k}\alpha_{k}-s_{k}\beta_{k},\quad k=1,\cdots,M-1,\label{eq:ham_F_Fbar}
\end{equation}

\end_inset

where
\begin_inset Formula 
\begin{equation}
c_{k}=\cos\left(\frac{\pi}{4}-\frac{k\pi}{2M}\right),\quad s_{k}=\sin\left(\frac{\pi}{4}-\frac{k\pi}{2M}\right).
\end{equation}

\end_inset

We define the zero modes as 
\begin_inset Formula 
\begin{equation}
F_{0}=F_{M}=e^{i\pi/4}\beta_{0},\quad\bar{F}_{0}=\bar{F}_{M}=e^{-i\pi/4}\alpha_{0}.\label{eq:ham_F0}
\end{equation}

\end_inset

The phase factors are chosen so that the expression of 
\begin_inset Formula $h_{kl}$
\end_inset

 in terms of eigenoperators will have a simple form.
 It then follows from 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_F_Fbar"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_F0"

\end_inset

 that 
\begin_inset Formula 
\begin{equation}
F_{k}^{\dagger}=\bar{F}_{M-k},\quad0\leq k\leq M-1,\label{eq:ham_Fdagger}
\end{equation}

\end_inset

 and the anticommutation relations
\begin_inset Formula 
\begin{equation}
\left\{ F_{k},F_{l}\right\} =\left\{ F_{k}^{\dagger},F_{l}^{\dagger}\right\} =0,\quad\left\{ F_{k},F_{l}^{\dagger}\right\} =\delta_{kl},\quad0\leq k,l\leq M-1.\label{eq:ham_F_anticommutation}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
To obtain the energy spectrum, we then need to find the ground energy 
\begin_inset Formula $E_{0}$
\end_inset

 and the ground eigenfunction 
\begin_inset Formula $\psi_{0}$
\end_inset

, which should satisify 
\begin_inset Formula $F_{m}\psi_{0}=0$
\end_inset

 for 
\begin_inset Formula $0\leq m<M$
\end_inset

.
 By inspection, we find the ground eifenfunction can be written as 
\begin_inset Formula 
\begin{equation}
\psi_{0}=\prod_{k=1}^{\left\lfloor \left(M-1\right)/2\right\rfloor }\left(c_{k}-s_{k}\alpha_{M-k}\alpha_{k}\right),\quad0\leq m\leq M-1.\label{eq:ham_ground_eigenfunction}
\end{equation}

\end_inset

Using 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_alpha_beta_anticom"

\end_inset

, we see that
\begin_inset Formula 
\begin{equation}
F_{k}\left(c_{k}-s_{k}\alpha_{M-k}\alpha_{k}\right)=F_{M-k}\left(c_{k}-s_{k}\alpha_{M-k}\alpha_{k}\right)=0,\quad1\leq k\leq M-1,
\end{equation}

\end_inset

 and that 
\begin_inset Formula $c_{l}-s_{l}\alpha_{M-l}\alpha_{l}$
\end_inset

 commutes with 
\begin_inset Formula $F_{k}$
\end_inset

 and 
\begin_inset Formula $F_{M-k}$
\end_inset

 for 
\begin_inset Formula $k\neq l$
\end_inset

.
 It then follows that 
\begin_inset Formula $F_{m}\psi_{0}=0$
\end_inset

.
 Acting 
\begin_inset Formula $h$
\end_inset

 on the ground eigenfunction, we obtain the ground energy
\begin_inset Formula 
\[
E_{0}=-4\sum_{k=1}^{M-1}\sin\frac{k\pi}{M}=-4\cot\frac{\pi}{2M}.
\]

\end_inset


\end_layout

\begin_layout Standard
A general eigenfunction is obtained by acting on the ground eigenfunction
 with raising operators
\begin_inset Formula 
\begin{equation}
\psi=\prod_{k=0}^{M-1}\left(F_{k}^{\dagger}\right)^{\lambda_{k}}\psi_{0},\quad\lambda_{k}=0,\,1.\label{eq:ham_general_eigenfunction}
\end{equation}

\end_inset

The wavefunction 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_general_eigenfunction"

\end_inset

 produce a valid energy eigenstate only when it satisfies the cyclic constraint
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_cyclicconstrtaint"

\end_inset

.
 Under the cyclic transformation 
\begin_inset Formula $\theta_{k}\to\theta_{k+1}$
\end_inset

, 
\begin_inset Formula $F_{k}^{\dagger}$
\end_inset

 transforms as 
\begin_inset Formula $F_{k}^{\dagger}\to e^{-2ik\pi/M}F_{k}^{\dagger}$
\end_inset

.
 It then follows that the modes 
\begin_inset Formula $k_{i}$
\end_inset

 must satisfy 
\begin_inset Formula 
\begin{equation}
\sum_{i=1}^{M-1}k\lambda_{k}=\begin{cases}
nM & \quad\text{for odd }M\\
\left(n+\frac{1}{2}\right)M & \quad\text{for even }M
\end{cases}.\label{eq:ham_cyclic_constraint}
\end{equation}

\end_inset

 Finally, we note that the corresponding energy eigenvalue of eigenfunction
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_general_eigenfunction"

\end_inset

 is
\begin_inset Formula 
\begin{equation}
E_{\left\{ k_{i}\right\} }=-4\cot\frac{\pi}{2M}+8\sum_{i=1}^{M-1}\lambda_{k}\sin\frac{k\pi}{M}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The above results can be easily generalized to arbitrary 
\begin_inset Formula $s$
\end_inset

 case.
 The ground eigenfunction and energy are 
\begin_inset Formula 
\begin{equation}
\psi_{0}=\prod_{a=1}^{s}\psi_{0}^{\left(a\right)},\quad E_{0}=-4s\cot\frac{\pi}{M}.
\end{equation}

\end_inset

 The general eigenfunction and energy are
\begin_inset Formula 
\begin{equation}
\psi=\prod_{a=1}^{s}\prod_{k=0}^{M-1}\left(F_{k}^{\left(a\right)\dagger}\right)^{\lambda_{a,k}}\psi_{0},\quad E=-sE_{0}+\sum_{a,k}\lambda_{a,k}\sin\frac{k\pi}{M},\quad\lambda_{a,k}=0,\,1.
\end{equation}

\end_inset

The cyclic constraint becomes 
\begin_inset Formula 
\begin{equation}
\sum_{a=1}^{s}\sum_{i=1}^{M-1}k\lambda_{a,k}=\begin{cases}
nM & \quad\text{for even }s\left(M-1\right)\\
\left(n+\frac{1}{2}\right)M & \quad\text{for odd }s\left(M-1\right)
\end{cases}.
\end{equation}

\end_inset

Since the zero modes do not change the energy, a general eigenstate has
 
\begin_inset Formula $2^{s}$
\end_inset

 degeneracies.
 
\end_layout

\begin_layout Subsection
Building conjugate wavefunction
\end_layout

\begin_layout Standard
So far we have obtained the energy eigenfunctions of single trace space.
 To formalize the 
\begin_inset Formula $1/N$
\end_inset

 expansion calculation, we also need to find functions conjugate to the
 eigenfunctions.
 The conjugate functions, denoted as 
\begin_inset Formula $\bar{\psi}_{r}$
\end_inset

, should satisfy the normalization condition 
\begin_inset Formula 
\begin{equation}
\int d^{s}\theta_{1}\cdots d^{s}\theta_{M}\,\bar{\psi}_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\psi_{s}\left(\theta_{1},\cdots,\theta_{M}\right)=\delta_{rs},\label{eq:ham_normalization}
\end{equation}

\end_inset

 and the completeness relation 
\begin_inset Formula 
\begin{equation}
\sum_{r}\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\bar{\psi}_{r}\left(\eta_{1},\cdots,\eta_{M}\right)=\delta^{\left(c\right)}\left(\theta-\eta\right).\label{eq:ham_completeness}
\end{equation}

\end_inset

 Here, 
\begin_inset Formula $\delta^{\left(c\right)}\left(\theta-\eta\right)$
\end_inset

 is the Dirac Delta function constrained in the space of function satisfying
 the cyclic constraint 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_cyclicconstrtaint"

\end_inset

.
 That being said, 
\begin_inset Formula $\delta^{\left(c\right)}\left(\theta-\phi\right)$
\end_inset

 behaves like the Dirac Delta function only when it is applied to a polynomial
 of c-numbers coefficients and satisfying Eqs.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_cyclicconstrtaint"

\end_inset

.
 When the coefficients of the polynomial are Grassmann values, it needs
 an extra sign factor to compensate the negative sign introduced by exchanges
 of the measure the 
\begin_inset Formula $d^{s}\theta_{1}\cdots d^{s}\theta_{M}$
\end_inset

 with Grassmann coefficients.
 Particularly, when applying the completeness relation to 
\begin_inset Formula $T\left(\theta\right)$
\end_inset

, we have 
\begin_inset Formula 
\begin{equation}
\int d^{s}\theta_{1}\cdots d^{s}\theta_{M}\, T\left(\theta\right)\sum_{r}\left(-\right)^{sMG\left(\bar{\psi}_{r}\right)}\psi_{r}\left(\theta\right)\bar{\psi}_{r}\left(\phi\right)=\sum_{r}\left(-\right)^{sMG\left(T_{r}\right)}T_{r}\bar{\psi}_{r}\left(\phi\right)=T\left(\theta\right),\label{eq:harm_completeness_1}
\end{equation}

\end_inset

where 
\begin_inset Formula $T_{r}$
\end_inset

 and 
\begin_inset Formula $\bar{\psi}_{r}$
\end_inset

 in the supersctipt of 
\begin_inset Formula $\left(-\right)$
\end_inset

 indicate the grading of 
\begin_inset Formula $T_{r}$
\end_inset

 and 
\begin_inset Formula $\bar{\psi}_{r}$
\end_inset

 .
\end_layout

\begin_layout Standard
We first find the conjugate function of 
\begin_inset Formula $\psi_{0}$
\end_inset

.
 For odd 
\begin_inset Formula $M$
\end_inset

, we have
\begin_inset Formula 
\[
\bar{\psi}_{0}=\left(-i\right)^{\left\lfloor M/2\right\rfloor }\alpha_{0}\prod_{i=1}^{\left\lfloor M/2\right\rfloor }\left(-s_{i}+c_{i}\alpha_{M-i}\alpha_{i}\right),
\]

\end_inset

and for even 
\begin_inset Formula $M$
\end_inset

, 
\begin_inset Formula 
\[
\bar{\psi}_{0}=\left(-i\right)^{M/2+1}\prod_{i=1}^{\left\lfloor M/2\right\rfloor }\left(-s_{i}+c_{i}\alpha_{M-i}\alpha_{i}\right)\alpha_{0}\alpha_{M/2}.
\]

\end_inset

To verify the normalization condition 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_normalization"

\end_inset

, we have 
\begin_inset Formula 
\begin{eqnarray*}
\int d^{M}\theta\,\tilde{\psi}_{0}\psi_{0} & = & \left(-i\right)^{\left\lfloor M/2\right\rfloor }\int d^{M}\theta\,\alpha_{0}\prod_{i=1}^{\left\lfloor M/2\right\rfloor }\left(-s_{i}+c_{i}\alpha_{M-i}\alpha_{i}\right)\left(c_{i}-s_{i}\alpha_{M-i}\alpha_{i}\right)\\
 & = & \left(-i\right)^{\left\lfloor M/2\right\rfloor }\int d^{M}\theta\,\alpha_{0}\prod_{i=1}^{\left\lfloor M/2\right\rfloor }\left(s_{i}^{2}+c_{i}^{2}\right)\alpha_{M-i}\alpha_{i}\\
 & = & \left(-i\right)^{\left\lfloor M/2\right\rfloor }\int d^{M}\theta\,\prod_{i=1}^{M}\alpha_{M-i}\\
 & = & 1,
\end{eqnarray*}

\end_inset

 where we used
\begin_inset Formula 
\[
\int d^{M}\theta\,\prod_{i=1}^{M}\alpha_{M-i}=i^{\left\lfloor \left(M-1\right)/2\right\rfloor }=\begin{cases}
i^{\left(M-1\right)/2} & \text{for odd }M\\
\left(-i\right)^{M/2-1} & \text{for even }M
\end{cases}
\]

\end_inset

 in the last step.
 The similar calculation can be done for even 
\begin_inset Formula $M$
\end_inset

 case.
 
\end_layout

\begin_layout Standard
For constructing the general conjugate function of 
\begin_inset Formula $\psi$
\end_inset

, it is convenient to define operator 
\begin_inset Formula $\tilde{F}^{\pm}$
\end_inset

 as follows.
 For grassmanian even function 
\begin_inset Formula $\psi\left(\theta\right)$
\end_inset

, we define 
\begin_inset Formula $\tilde{F}_{k}^{+}$
\end_inset

 as 
\begin_inset Formula 
\[
\int d^{M}\theta\,\left[\tilde{F}_{k}^{+}\psi\left(\theta\right)\right]\chi\left(\theta\right)=\int d^{M}\theta\,\psi\left(\theta\right)\left[F_{k}\chi\left(\theta\right)\right].
\]

\end_inset

Likewise, for grassmanian odd function 
\begin_inset Formula $\psi\left(\theta\right)$
\end_inset

, we define 
\begin_inset Formula $\tilde{F}^{-}$
\end_inset

 as 
\begin_inset Formula 
\[
\int d^{M}\theta\,\left[\tilde{F}_{k}^{-}\psi\left(\theta\right)\right]\chi\left(\theta\right)=\int d^{M}\theta\,\psi\left(\theta\right)\left[F_{k}\chi\left(\theta\right)\right].
\]

\end_inset

It follows that 
\begin_inset Formula 
\[
\tilde{F}_{0}^{\pm}=\mp\beta_{0},\quad\tilde{F}_{k}^{\pm}=\pm\left(s_{k}\alpha_{k}-c_{k}\beta_{k}\right),\quad1\leq k\leq M-1.
\]

\end_inset

 Now the conjugate function of a genral eigenfunction can be expressed as
\begin_inset Formula 
\[
\bar{\psi}=\tilde{F}_{k_{p}}\cdots\tilde{F}_{k_{1}}\bar{\psi}_{0},\quad0\leq k_{1}<\cdots<k_{p}\leq M-1,
\]

\end_inset

 where 
\begin_inset Formula $\tilde{F}$
\end_inset

 picks 
\begin_inset Formula $\tilde{F}^{-}$
\end_inset

 for odd 
\begin_inset Formula $M$
\end_inset

 and 
\begin_inset Formula $\tilde{F}^{+}$
\end_inset

 for even 
\begin_inset Formula $M$
\end_inset

.
 To verify the normalization condition, we have
\begin_inset Formula 
\begin{eqnarray*}
\int d^{M}\theta\,\bar{\psi}\psi & = & \int d^{M}\theta\,\left(\tilde{F}_{k_{p}}\tilde{F}_{k_{p-1}}\cdots\tilde{F}_{k_{1}}\bar{\psi}_{0}\right)F_{k_{1}}^{\dagger}\cdots F_{k_{p}}^{\dagger}\psi_{0}\\
 & = & \int d^{M}\theta\,\bar{\psi}_{0}F_{k_{p}}F_{k_{p-1}}\cdots F_{k_{1}}F_{k_{1}}^{\dagger}\cdots F_{k_{p}}^{\dagger}\psi_{0}\\
 & = & \int d^{M}\theta\,\bar{\psi}_{0}\psi_{0}\\
 & = & 1
\end{eqnarray*}

\end_inset

 The normalization condition and cyclic constraint automatically implies
 the completeness relation 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_completeness"

\end_inset

.
 
\end_layout

\begin_layout Standard
For arbitrary 
\begin_inset Formula $s$
\end_inset

 case, the 
\begin_inset Formula $\psi_{0}$
\end_inset

 is the product of the ground eigenfunction of each components: 
\begin_inset Formula 
\[
\psi_{0}=\psi_{0}^{\left(1\right)}\psi_{0}^{\left(2\right)}\cdots\psi_{0}^{\left(s\right)}.
\]

\end_inset

 Likewise, 
\begin_inset Formula 
\[
\bar{\psi}_{0}=\left(-1\right)^{s\left(s-1\right)M\left(M-1\right)/4}\bar{\psi}_{0}^{\left(s\right)}\cdots\bar{\psi}_{0}^{\left(1\right)},
\]

\end_inset

 where the sign factor comes from reorder of the integration variables from
 
\begin_inset Formula $d^{s}\theta_{1}\cdots d^{s}\theta_{M}$
\end_inset

 to 
\begin_inset Formula $\prod_{i=1}^{s}d\theta_{1}^{\left(i\right)}\cdots d\theta_{M}^{\left(i\right)}$
\end_inset

.
 The general eigenfunction
\begin_inset Formula 
\[
\psi=\prod_{i=1}^{s}\prod_{k=0}^{M-1}\left(F_{k}^{\left(i\right)\dagger}\right)^{\lambda_{k,i}}\psi_{0},\quad\bar{\psi}=\prod_{i=0}^{s-1}\prod_{k=1}^{M}\left(\tilde{F}_{M-k}^{\left(s-i\right)}\right)^{\lambda_{M-k,s-i}}\psi_{0},
\]

\end_inset

 where 
\begin_inset Formula $\lambda_{k,i}$
\end_inset

 are either zero or one and 
\begin_inset Formula 
\[
\sum_{i=1}^{s}\sum_{k=0}^{M-1}k\lambda_{k,i}=\begin{cases}
nM & \quad\text{for even }s\left(M-1\right)\\
\left(n+\frac{1}{2}\right)M & \quad\text{for odd }s\left(M-1\right)
\end{cases}.
\]

\end_inset


\end_layout

\begin_layout Section
Three Chain overlap
\end_layout

\begin_layout Standard
So far we have constructed the eigenfunctions and their conjugates.
 But to calculate the 
\begin_inset Formula $1/N$
\end_inset

 expansion, we also need to establish the relation between the eigenoperators
 between 
\begin_inset Formula $M$
\end_inset

-bit chain and the ones of 
\begin_inset Formula $L$
\end_inset

 bits and 
\begin_inset Formula $K=M-L$
\end_inset

 bits.
 The work has been done in 
\begin_inset CommandInset citation
LatexCommand cite
key "Thorn:2015wli"

\end_inset

.
 Here, we make a slight change on the results.
 
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $F_{m}^{\left(1\right)}$
\end_inset

 and 
\begin_inset Formula $F_{n}^{\left(2\right)}$
\end_inset

 be lowering operators of 
\begin_inset Formula $L$
\end_inset

-bit and 
\begin_inset Formula $K$
\end_inset

-bit chains.
 Define a set of operators 
\begin_inset Formula $f_{0},\, f_{1},\,\cdots,f_{M-2}$
\end_inset

 as 
\begin_inset Formula 
\begin{eqnarray*}
f_{0} & = & F_{0}=F_{0}^{\left(1\right)}\sqrt{\frac{L}{M}}+F_{0}^{\left(2\right)}\sqrt{\frac{K}{M}},\\
f_{n} & = & F_{n}^{\left(1\right)},\quad1\leq n\leq L-1,\\
f_{n+L} & = & F_{n}^{\left(2\right)},\quad1\leq n\leq K-1,\\
f_{M-1} & = & F_{0}^{\left(1\right)}\sqrt{\frac{K}{M}}-F_{0}^{\left(2\right)}\sqrt{\frac{L}{M}}.
\end{eqnarray*}

\end_inset

 It is easy to verify that 
\begin_inset Formula 
\[
\left\{ f_{n},f_{m}\right\} =\left\{ f_{n}^{\dagger},f_{m}^{\dagger}\right\} =0,\quad\left\{ f_{n},f_{m}^{\dagger}\right\} =\delta_{nm}.
\]

\end_inset

Then the lowering operator of 
\begin_inset Formula $M$
\end_inset

-bit chain can be written as 
\begin_inset Formula 
\[
F_{m}=\sum_{n=0}^{M-1}\left(f_{n}C_{mn}+f_{n}^{\dagger}S_{mn}\right),\quad0\leq m\leq M-1
\]

\end_inset

 where 
\begin_inset Formula $C$
\end_inset

and 
\begin_inset Formula $S$
\end_inset

 satisfy 
\begin_inset Formula 
\begin{equation}
CS^{T}+SC^{T}=0,\quad CC^{\dagger}+SS^{\dagger}=I,\label{eq:overlap_CS_relation}
\end{equation}

\end_inset

by the requirements of anticommutation relation among 
\begin_inset Formula $F_{m}$
\end_inset

 and 
\begin_inset Formula $F_{m}^{\dagger}$
\end_inset

.
 The matrix elements of 
\begin_inset Formula $C$
\end_inset

 and 
\begin_inset Formula $S$
\end_inset

 are given by
\begin_inset Formula 
\[
C_{0n}=C_{n0}=\delta_{0,n},\quad S_{0,n}=S_{n,0}=0,\quad0\leq n<M
\]

\end_inset

 and
\begin_inset Formula 
\begin{align}
C_{mn} & =-\frac{1}{\sqrt{ML}}\frac{1-e^{-2\pi imL/M}}{1-e^{-2\pi i\left(n/L-m/M\right)}}\cos\left(\frac{n\pi}{2L}-\frac{m\pi}{2M}\right),\quad1\leq n<L\label{eq:overlap_C_mn1}\\
C_{m,L+n} & =\frac{1}{\sqrt{ML}}\frac{1-e^{-2\pi imL/M}}{1-e^{-2\pi i\left(n/K-m/M\right)}}\cos\left(\frac{n\pi}{2K}-\frac{m\pi}{2M}\right),\quad1\leq n<K\\
C_{m,M-1} & =-\frac{1}{\sqrt{LK}}\frac{1-e^{-2\pi imL/M}}{1-e^{2i\pi m/M}}\cos\left(\frac{m\pi}{2M}-\frac{\pi}{4}\right)e^{-i\pi/4}\\
S_{mn} & =-\frac{1}{\sqrt{ML}}\frac{1-e^{-2\pi imL/M}}{1-e^{-2\pi im/M}}\cos\left(\frac{n\pi}{2L}+\frac{m\pi}{2M}\right),\quad1\leq n<L\\
S_{m,L+n} & =\frac{1}{\sqrt{MK}}\frac{1-e^{-2\pi imL/M}}{1-e^{-2\pi i\left(n/K+m/M\right)}}\cos\left(\frac{n\pi}{2K}+\frac{m\pi}{2M}\right),\quad1\leq n<K\\
S_{m,M-1} & =-\frac{1}{LK}\frac{1-e^{-2\pi imL/M}}{1-e^{-2\pi im/M}}\cos\left(\frac{m\pi}{2M}+\frac{\pi}{4}\right)e^{i\pi/4},\label{eq:overlap_S_mM1}
\end{align}

\end_inset

where 
\begin_inset Formula $1\leq m\leq M-1$
\end_inset

 in Eqs.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:overlap_C_mn1"

\end_inset

-
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:overlap_S_mM1"

\end_inset

.
 
\end_layout

\begin_layout Standard
We then express the ground eigenfunction of large chain as
\begin_inset Formula 
\begin{equation}
\psi_{0}=\exp\left(\frac{1}{2}\sum_{kl}f_{k}^{\dagger}M_{kl}f_{l}^{\dagger}\right)\psi_{0}^{\left(1\right)}\psi_{0}^{\left(2\right)}\left[\det\left(I+MM^{\dagger}\right)\right]^{-1/4}.\label{eq:overlap_psi_M}
\end{equation}

\end_inset

The constraints 
\begin_inset Formula $F_{m}\psi_{0}=0$
\end_inset

 implies 
\begin_inset Formula 
\begin{equation}
C_{mn}M_{nl}+S_{ml}=0.\label{eq:overlap_CMS}
\end{equation}

\end_inset

 In our construction, the matrices 
\begin_inset Formula $C$
\end_inset

, 
\begin_inset Formula $S$
\end_inset

, and 
\begin_inset Formula $M$
\end_inset

 are in the form 
\begin_inset Formula 
\[
C=\begin{pmatrix}1\end{pmatrix}\oplus C^{\prime},\quad S=\begin{pmatrix}0\end{pmatrix}\oplus S^{\prime},\quad M=\begin{pmatrix}0\end{pmatrix}\oplus M^{\prime},
\]

\end_inset

 where 
\begin_inset Formula $C^{\prime}$
\end_inset

, 
\begin_inset Formula $S^{\prime}$
\end_inset

, 
\begin_inset Formula $M^{\prime}$
\end_inset

 are matrices of dimension 
\begin_inset Formula $\left(M-1\right)\times\left(M-1\right)$
\end_inset

.
 
\end_layout

\begin_layout Standard
With 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:overlap_CS_relation"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:overlap_CMS"

\end_inset

, we can further simplify 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:overlap_psi_M"

\end_inset

, 
\begin_inset Formula 
\begin{eqnarray*}
\det\left(I+MM^{\dagger}\right) & = & \frac{\det\left[C\left(I+MM^{\dagger}\right)C^{\dagger}\right]}{\det\left[CC^{\dagger}\right]}\\
 & = & \frac{\det\left[CC^{\dagger}+SS^{\dagger}\right]}{\det\left(CC^{\dagger}\right)}\\
 & = & \left[\det\left(CC^{\dagger}\right)\right]^{-1},
\end{eqnarray*}

\end_inset

 
\begin_inset Formula 
\begin{equation}
\psi_{0}=\left|\det C\right|^{1/2}\exp\left(\frac{1}{2}\sum_{kl}f_{k}^{\dagger}M_{kl}f_{l}^{\dagger}\right)\psi_{0}^{\left(1\right)}\psi_{0}^{\left(2\right)}.\label{eq:overlap_psi_M1}
\end{equation}

\end_inset

The conjugate function is
\begin_inset Formula 
\begin{equation}
\bar{\psi}_{0}=\left|\det C\right|^{1/2}\exp\left(\frac{1}{2}\sum_{kl}\tilde{f}_{k}M_{kl}^{\dagger}\tilde{f}_{l}\right)\bar{\psi}_{0}^{\left(2\right)}\bar{\psi}_{0}^{\left(1\right)},\label{eq:overlap_psibar_M}
\end{equation}

\end_inset

 where 
\begin_inset Formula $\tilde{f}$
\end_inset

 picks 
\begin_inset Formula $\tilde{f}^{+}$
\end_inset

 if 
\begin_inset Formula $M$
\end_inset

 is even and 
\begin_inset Formula $\tilde{f}^{-}$
\end_inset

 if 
\begin_inset Formula $M$
\end_inset

 is odd.
\end_layout

\begin_layout Section
\begin_inset Formula $1/N$
\end_inset

 Expansion
\end_layout

\begin_layout Standard
Now let us calculate the action of Hamiltonin on the leading order energy
 eigenstate 
\begin_inset Formula $T_{r}\ket{0}$
\end_inset

.
 In the following calculation we denote 
\begin_inset Formula $g_{s,t}$
\end_inset

 as the grading of single trace energy eigenstate 
\begin_inset Formula $T_{s,t}$
\end_inset

, and hence the grading of 
\begin_inset Formula $\bar{\psi}_{s,t}$
\end_inset

 and 
\begin_inset Formula $\psi_{s,t}$
\end_inset

 are 
\begin_inset Formula $g_{s,t}$
\end_inset

 and 
\begin_inset Formula $sM-g_{s,t}$
\end_inset

 respectively.
 The integers 
\begin_inset Formula $L$
\end_inset

 and 
\begin_inset Formula $K$
\end_inset

 always satisfy the relation 
\begin_inset Formula $L+K=M$
\end_inset

.
 Using 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_trace_energystate"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:harm_completeness_1"

\end_inset

, we have 
\begin_inset Formula 
\begin{eqnarray*}
HT_{r}\ket{0} & = & E_{r}T_{r}\ket{0}+\frac{1}{N}\int d\theta\,\sum_{k=1}^{M}\sum_{l=k+2}^{M+k}\bar{h}_{kl}T\left(\theta_{l}\cdots\theta_{k}\right)T\left(\theta_{k+1}\cdots\theta_{l-1}\right)\ket{0}\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\\
 & = & E_{r}T_{r}\ket{0}+\frac{1}{N}\int d\theta\,\sum_{k=1}^{M}\sum_{L=1}^{M-1}\bar{h}_{k,k+L+1}T\left(\theta_{k+L+1}\cdots\theta_{k}\right)T\left(\theta_{k+1}\cdots\theta_{k+L}\right)\ket{0}\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\\
 & = & E_{r}T_{r}\ket{0}+\frac{1}{N}\int d\theta\,\sum_{k=1}^{M}\sum_{L=1}^{M-1}\bar{h}_{k,k+L+1}\sum_{s,t}\left(-\right)^{s\left(Kg_{t}+Lg_{s}\right)}\\
 &  & \times T_{t}\bar{\psi}_{t}\left(\theta_{k+L+1}\cdots\theta_{k}\right)T_{s}\bar{\psi}_{s}\left(\theta_{k+1}\cdots\theta_{k+L}\right)\ket{0}\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\\
 & = & E_{r}T_{r}\ket{0}+\frac{1}{N}\sum_{L=1}^{M-1}\sum_{s,t}T_{s}T_{t}\ket{0}\left(-\right)^{s\left(Kg_{s}+Lg_{t}\right)}\\
 &  & \times\int d\theta\,\sum_{k=1}^{M}\bar{h}_{k,k+L+1}\bar{\psi}_{t}\left(\theta_{k+L+1}\cdots\theta_{k}\right)\bar{\psi}_{s}\left(\theta_{k+1}\cdots\theta_{k+L}\right)\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right)\\
 & \equiv & E_{r}T_{r}\ket{0}+\frac{1}{N}\sum_{L=1}^{M-1}\sum_{s,t}T_{s}T_{t}\ket{0}V_{str}^{\left(K,L\right)}
\end{eqnarray*}

\end_inset

 where 
\begin_inset Formula $T_{t}$
\end_inset

 and 
\begin_inset Formula $T_{s}$
\end_inset

 are single trace energy state of 
\begin_inset Formula $L$
\end_inset

-bit and 
\begin_inset Formula $\left(M-L\right)$
\end_inset

-bit chains respectively and 
\begin_inset Formula 
\begin{equation}
V_{tsr}^{\left(K,L\right)}=\left(-\right)^{s\left(Kg_{s}+Lg_{t}\right)}\sum_{k=1}^{M}\int d\theta\,\bar{h}_{k,k+L+1}\bar{\psi}_{t}\left(\theta_{k+L+1}\cdots\theta_{k}\right)\bar{\psi}_{s}\left(\theta_{k+1}\cdots\theta_{k+L}\right)\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right).\label{eq:pert_Vstr}
\end{equation}

\end_inset

 Renaming 
\begin_inset Formula $\theta_{i}$
\end_inset

 to 
\begin_inset Formula $\theta_{i+1}$
\end_inset

 in 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:pert_Vstr"

\end_inset

and applying
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:ham_cyclicconstrtaint"

\end_inset

, we can simplify 
\begin_inset Formula $V_{str}^{\left(L\right)}$
\end_inset

 as 
\begin_inset Formula 
\begin{equation}
V_{tsr}^{\left(K,L\right)}=\left(-\right)^{s\left(Kg_{s}+Lg_{t}\right)}M\int d\theta\,\bar{\psi}_{t}\left(\theta_{L+1}\cdots\theta_{M}\right)\bar{\psi}_{s}\left(\theta_{1}\cdots\theta_{L}\right)h_{M,L+1}\psi_{r}\left(\theta_{1},\cdots,\theta_{M}\right).\label{eq:pert_Vstr_2}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The action of 
\begin_inset Formula $H$
\end_inset

 on double trace produces both fussion and fission terms.
 
\begin_inset Formula 
\begin{eqnarray*}
HT_{s}T_{t}\ket{0} & = & \left(E_{s}+E_{t}\right)T_{s}T_{k}\ket{0}\\
 &  & +\frac{1}{N}\int d\theta d\eta\,\sum_{k=1}^{K}\sum_{l=1}^{L}\left(-\right)^{sK\left(g_{s}-sL\right)}\bar{h}_{lk}T\left(\theta_{l+1}\cdots\theta_{l}\eta_{k}\cdots\eta_{k-1}\right)\psi_{s}\left(\theta_{1}\cdots\theta_{L}\right)\psi_{t}\left(\eta_{1}\cdots\eta_{K}\right)\ket{0}\\
 &  & +\frac{1}{N}\int d\theta d\eta\,\sum_{k=1}^{K}\sum_{l=1}^{L}\left(-\right)^{sK\left(g_{s}-sL\right)}\bar{h}_{kl}T\left(\theta_{l}\cdots\theta_{l-1}\eta_{k+1}\cdots\eta_{k}\right)\psi_{s}\left(\theta\right)\psi_{t}\left(\eta\right)\ket{0}+\cdots\\
 & = & \left(E_{s}+E_{t}\right)T_{s}T_{k}\ket{0}\\
 &  & +\frac{1}{N}\left(-\right)^{sK\left(g_{s}-L\right)}\sum_{r}T_{r}\int d\theta d\eta\,\sum_{k=1}^{K}\sum_{l=1}^{L}\bar{h}_{lk}\bar{\psi}_{r}\left(\theta_{l+1}\cdots\theta_{l}\eta_{k}\cdots\eta_{k-1}\right)\psi_{s}\left(\theta\right)\psi_{t}\left(\eta\right)\ket{0}\\
 &  & +\frac{1}{N}\left(-\right)^{sK\left(g_{s}-L\right)}\sum_{r}T_{r}\int d\theta d\eta\,\sum_{k=1}^{K}\sum_{l=1}^{L}\bar{h}_{kl}\bar{\psi}_{r}\left(\theta_{l}\cdots\theta_{l-1}\eta_{k+1}\cdots\eta_{k}\right)\psi_{s}\left(\theta\right)\psi_{t}\left(\eta\right)\ket{0}+\cdots\\
 & \equiv & \left(E_{s}+E_{t}\right)T_{s}T_{k}\ket{0}+\frac{1}{N}\sum_{r}T_{r}\ket{0}\left(W_{rst}^{\left(1\right)}+W_{rst}^{\left(2\right)}\right)+\cdots
